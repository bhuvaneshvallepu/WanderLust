<% layout("/layouts/boilerplate") %>
<br>
<div class="row">
    <div class="col-8 offset-2">
    <h3>Create New Listing</h3>
    <br>
    <form method="POST" action="/listings" novalidate class="needs-validation">
        <div class="mb-3">
            <lable for="Add a catchy title" class="form-label">Title</lable>
        <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required>
        <div class="valid-feedback">Title looks good!</div>
        </div>
        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <textarea name="listing[description]"  type="text" class="form-control" required></textarea>
            <div class="invalid-feedback">Please enter a short description</div>
        </div>
        <div class="mb-3">
            <lable for="image" class="form-label">Image link</lable>
            <input name="listing[image]" placeholder="enter image URL/link" type="text" class="form-control">
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
            <lable for="price" class="form-label" type="number">Price</lable>
            <input name="listing[price]" placeholder="1200" class="form-control" required>
            <div class="invalid-feedback">Price should be valid</div>
        </div>
        <div class="mb-3 col-md-8">
            <lable for="country" class="form-label" type="text">Country</lable>
            <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
            <div class="invalid-feedback">Country name should be valid</div>
        </div>
    </div>
        <div class="mb-3">
            <lable for="location" class="form-label">Location</lable>
            <input name="listing[location]" placeholder="Hyderabad,Telangana" type="text" class="form-control" required>
            <div class="invalid-feedback">Loaction should be valid</div>
        </div>
        <br><br>
        <button class="btn btn-dark add-btn">Add</button>
    </form>
</div>
</div>

