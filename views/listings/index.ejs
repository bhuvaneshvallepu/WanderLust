<% layout("/layouts/boilerplate") -%>
<body>
  <style>
    #filters{
      display: flex;
      align-items: center;
      flex-wrap: wrap;      
    }
    .filter{
      text-align: center;
      margin-right: 2rem;
      margin-top: 1rem;
      opacity: 0.7;
    }
    .filter:hover{
      opacity: 1;
      transition: 0.3s;
      cursor: pointer;
    }
    .text-info{
      display: none;
    }
    .tex-toggle{
      border: 1px solid black;
      border-radius: 1rem;
      height: 3.5rem;
      padding: 1rem;
      margin-left: 2rem;
      display: flex;
      align-items: center;
    }
  </style>
  
  <div id="filters">
    <div class="filter">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trendings</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Room</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic City</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-mountain"></i></div>
      <p>mountains</p>
    </div>
    <div class="filter">
      <div><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castels</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Awazing pool</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>campings</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-cow"></i></div>
      <p>farms</p>
    </div>
    <div class="filter">
      <div><i class="fa-regular fa-snowflake"></i></div>
      <p>Arctik</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>campings</p>
    </div>
    <div class="tex-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Display Total After Texes</label>
      </div>
    </div>

  </div>
  <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 mt-1">
      <% for(let listing of allListings){ %>
        <a href="/listings/<%=listing._id%>" class="listing-links">
          <div class="card col">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image" style="height: 20rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b><%= listing.title %></b> <br>
                &#8377; <%= listing.price.toLocaleString("en-in") %> / night
                <i class="text-info">&nbsp; &nbsp; +18% GST</i>
              </p>
            </div>
          </div>
        <% } %>
      </div>
        </a>
</body>

<script>
  let texSwitch = document.getElementById("flexSwitchCheckDefault");
  texSwitch.addEventListener("click", ()=>{
    console.log("clicked");
    let textInfo = document.getElementsByClassName("text-info");
    for(info of textInfo){
      if(info.style.display !== "inline"){
        info.style.display = "inline";
      }else{
        info.style.display = "none";
      }
    }
  });

</script>